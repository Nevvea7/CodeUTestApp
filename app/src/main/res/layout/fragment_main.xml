<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivityFragment">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Location/Restaurants"
        android:id="@+id/get_location_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude: "
        android:layout_below="@id/get_location_button"
        android:id="@+id/cur_location_longitude" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude: "
        android:layout_below="@id/cur_location_longitude"
        android:id="@+id/cur_location_latitude" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List of results: "
        android:layout_below="@id/cur_location_latitude"
        android:id="@+id/cur_location_result_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@id/cur_location_result_label"
        android:id="@+id/cur_location_result" />


</RelativeLayout>
